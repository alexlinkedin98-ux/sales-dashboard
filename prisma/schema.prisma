// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Sales Representatives
model SalesRep {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  entries   WeeklyEntry[]
  callAnalyses     CallAnalysis[]
  weeklyCallStats  WeeklyCallStats[]
  upsellEntries    UpsellEntry[]
  triageEntries    TriageEntry[]
  reviewEntries    ReviewEntry[]
  // SPIN Trainer relations
  trainingSessions  TrainingSession[]
  spacedRepetition  SpacedRepetition[]
  trainerStats      TrainerStats?
  // Sales Checklist relations
  checklistItems       ChecklistItem[]
  checklistCompletions ChecklistCompletion[]
  weeklyChecklistHistory WeeklyChecklistHistory[]
}

// Weekly Triage Data Entries (triage calls tracking)
model TriageEntry {
  id                String   @id @default(cuid())

  // Relationship to sales rep
  salesRepId        String
  salesRep          SalesRep @relation(fields: [salesRepId], references: [id], onDelete: Cascade)

  // Week information
  weekStartDate     DateTime
  weekLabel         String   // e.g., "January 1 2026"

  // Triage Funnel Stages
  triageBooked      Int      @default(0)  // How many triage calls booked
  triageTaken       Int      @default(0)  // How many triage calls actually taken
  qualifiedForIntro Int      @default(0)  // How many qualified for intro call

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Unique constraint - one entry per rep per week
  @@unique([salesRepId, weekStartDate])
}

// Weekly Upsell Data Entries (internal sales to existing customers)
model UpsellEntry {
  id                String   @id @default(cuid())

  // Relationship to sales rep
  salesRepId        String
  salesRep          SalesRep @relation(fields: [salesRepId], references: [id], onDelete: Cascade)

  // Week information
  weekStartDate     DateTime
  weekLabel         String   // e.g., "January 1 2026"

  // Upsell Funnel Stages
  outreachCount     Int      @default(0)  // How many outreach attempts
  meetingsBooked    Int      @default(0)  // How many meetings booked
  proposalsMade     Int      @default(0)  // How many proposals made
  dealsClosed       Int      @default(0)  // How many upsells closed

  // Revenue
  upsellRevenue     Float    @default(0)  // MRR from upsells

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Unique constraint - one entry per rep per week
  @@unique([salesRepId, weekStartDate])
}

// Weekly Sales Data Entries
model WeeklyEntry {
  id                    String   @id @default(cuid())

  // Relationship to sales rep
  salesRepId            String
  salesRep              SalesRep @relation(fields: [salesRepId], references: [id], onDelete: Cascade)

  // Week information
  weekStartDate         DateTime
  weekLabel             String   // e.g., "January 1 2026"

  // Sales Stages - Input fields
  introCallsScheduled   Int      @default(0)
  introCallsTaken       Int      @default(0)
  accountsAudited       Int      @default(0)
  proposalsPitched      Int      @default(0)
  dealsClosed           Int      @default(0)

  // MRR
  mrr                   Float    @default(0)

  // Timestamps
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Unique constraint - one entry per rep per week
  @@unique([salesRepId, weekStartDate])
}

// Marketing Channels
model MarketingChannel {
  id            String                  @id @default(cuid())
  name          String                  @unique
  createdAt     DateTime                @default(now())
  updatedAt     DateTime                @updatedAt
  entries       MarketingEntry[]
  monthlyStats  MonthlyMarketingStats[]
  triageEntries MarketingTriageEntry[]
}

// Weekly Marketing Triage Data Entries (marketing channel triage tracking)
model MarketingTriageEntry {
  id                String           @id @default(cuid())

  // Relationship to marketing channel
  channelId         String
  channel           MarketingChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  // Week information
  weekStartDate     DateTime
  weekLabel         String   // e.g., "January 1 2026"

  // Marketing Triage Funnel Stages
  leadsReceived     Int      @default(0)  // How many leads received from this channel
  leadsContacted    Int      @default(0)  // How many leads were contacted
  leadsQualified    Int      @default(0)  // How many leads qualified for sales

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Unique constraint - one entry per channel per week
  @@unique([channelId, weekStartDate])
}

// Weekly Marketing Data Entries
model MarketingEntry {
  id              String           @id @default(cuid())

  // Relationship to marketing channel
  channelId       String
  channel         MarketingChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  // Week information
  weekStartDate   DateTime
  weekLabel       String   // e.g., "January 1 2026"

  // Leads generated for this week
  leadsGenerated  Int      @default(0)

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Unique constraint - one entry per channel per week
  @@unique([channelId, weekStartDate])
}

// Monthly Marketing Stats (spend and clients closed for ROI calculation)
model MonthlyMarketingStats {
  id             String           @id @default(cuid())

  // Relationship to marketing channel
  channelId      String
  channel        MarketingChannel @relation(fields: [channelId], references: [id], onDelete: Cascade)

  // Month information (first day of month)
  monthStartDate DateTime
  monthLabel     String   // e.g., "January 2026"

  // Financial data
  spend          Float    @default(0)  // Dollars spent
  clientsClosed  Int      @default(0)  // Number of clients closed

  // Timestamps
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Unique constraint - one entry per channel per month
  @@unique([channelId, monthStartDate])
}

// Call Analysis for SPIN/Challenger/Insight Selling tracking
model CallAnalysis {
  id              String   @id @default(cuid())
  salesRepId      String
  salesRep        SalesRep @relation(fields: [salesRepId], references: [id], onDelete: Cascade)
  callDate        DateTime
  callLabel       String   // Custom name for the call (e.g., "Discovery call with Acme Corp")
  crmLink         String?  // Link to CRM record (e.g., Pipedrive deal URL)

  // Raw transcript (optional, for reference)
  transcript      String?  @db.Text

  // SPIN Counts
  situationQuestions    Int @default(0)
  problemQuestions      Int @default(0)
  implicationQuestions  Int @default(0)
  needPayoffQuestions   Int @default(0)

  // Challenger Sale Counts
  challengesPresented   Int @default(0)
  dataPointsShared      Int @default(0)

  // Insight Selling
  insightsShared        Int @default(0)

  // AI Scores (1-10)
  aiScoreSpin           Float?
  aiScoreChallenger     Float?
  aiScoreInsight        Float?
  aiScoreOverall        Float?
  aiFeedback            String? @db.Text

  // Rep Self-Assessment (1-10) - entered first
  repScoreSpin          Float?
  repScoreChallenger    Float?
  repScoreInsight       Float?
  repScoreOverall       Float?
  repNotes              String?

  // Metadata
  callDuration          Int?     // minutes
  outcome               String?  // "booked", "follow_up", "not_interested", "no_show", "warm_follow_up", "won"

  // Relation to follow-up sequence
  followUpSequence      FollowUpSequence?

  // Timestamps
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@unique([salesRepId, callDate, callLabel])
}

// Weekly aggregation for call analysis trends
model WeeklyCallStats {
  id              String   @id @default(cuid())
  salesRepId      String
  salesRep        SalesRep @relation(fields: [salesRepId], references: [id], onDelete: Cascade)
  weekStartDate   DateTime
  weekLabel       String

  // Aggregated counts
  totalCalls            Int @default(0)
  avgSituationQuestions Float @default(0)
  avgProblemQuestions   Float @default(0)
  avgImplicationQuestions Float @default(0)
  avgNeedPayoffQuestions Float @default(0)
  avgChallenges         Float @default(0)
  avgDataPoints         Float @default(0)
  avgInsights           Float @default(0)

  // Aggregated scores
  avgAiScoreOverall     Float?
  avgRepScoreOverall    Float?

  // Timestamps
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@unique([salesRepId, weekStartDate])
}

// Monthly Review Tracking
model ReviewEntry {
  id              String   @id @default(cuid())

  // Relationship to sales rep (who requested the reviews)
  salesRepId      String
  salesRep        SalesRep @relation(fields: [salesRepId], references: [id], onDelete: Cascade)

  // Month information (first day of month)
  monthStartDate  DateTime
  monthLabel      String   // e.g., "January 2026"

  // Review Tracking
  reviewsRequested    Int      @default(0)  // How many reviews were requested
  googleReviews       Int      @default(0)  // Google reviews received
  clutchReviews       Int      @default(0)  // Clutch reviews received

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Unique constraint - one entry per rep per month
  @@unique([salesRepId, monthStartDate])
}

// Warm Follow-up Sequence for CRM-style outreach
model FollowUpSequence {
  id              String   @id @default(cuid())

  // Link to the call analysis that triggered this sequence
  callAnalysisId  String   @unique
  callAnalysis    CallAnalysis @relation(fields: [callAnalysisId], references: [id], onDelete: Cascade)

  // Contact info (derived from call analysis)
  contactName     String   // Name of the prospect
  contactEmail    String?  // Email if available

  // Sequence timing
  sequenceStartDate DateTime  // When the call was marked as "warm_follow_up"
  cooldownEndDate   DateTime  // 3 months from start - when follow-ups begin

  // Current state
  status          String   @default("cooling") // "cooling", "active", "completed", "won"
  currentCycle    Int      @default(1)  // Which 3-month cycle we're on

  // Contact phone for WhatsApp/Text/Call
  contactPhone    String?  // Phone number if available

  // Multi-channel sequence tracking (5 steps):
  // Step 1: Email (AI-generated from transcript)
  step1Due        DateTime?  // Due date for first email
  step1Done       Boolean  @default(false)
  step1Content    String?  @db.Text  // AI-generated email content

  // Step 2: WhatsApp/Text message (Day +1)
  step2Due        DateTime?
  step2Done       Boolean  @default(false)

  // Step 3: Email 2 (Day +3)
  step3Due        DateTime?
  step3Done       Boolean  @default(false)

  // Step 4: Phone call (Day +5)
  step4Due        DateTime?
  step4Done       Boolean  @default(false)
  step4Notes      String?  @db.Text  // Notes from the call

  // Step 5: Email 3 (Day +7)
  step5Due        DateTime?
  step5Done       Boolean  @default(false)

  // Legacy fields for backwards compatibility (will migrate data)
  email1Due       DateTime?
  email1Sent      Boolean  @default(false)
  email1Content   String?  @db.Text

  email2Due       DateTime?
  email2Sent      Boolean  @default(false)

  email3Due       DateTime?
  email3Sent      Boolean  @default(false)

  // Next cooldown (after all 5 steps complete)
  nextCooldownEnd DateTime?  // When the next cycle starts

  // Notes
  notes           String?  @db.Text

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Change History Log for undo functionality
model ChangeLog {
  id            String   @id @default(cuid())

  // What was changed
  entityType    String   // "WeeklyEntry", "TriageEntry", "UpsellEntry", "MarketingEntry", "SalesRep", "MarketingChannel"
  entityId      String   // ID of the changed record
  action        String   // "create", "update", "delete"

  // Store the data for undo
  previousData  String?  @db.Text // JSON of previous state (for update/delete)
  newData       String?  @db.Text // JSON of new state (for create/update)

  // Human-readable description
  description   String   // e.g., "Deleted week Jan 6 for John Smith"

  // Optional reference info
  relatedName   String?  // e.g., rep name or channel name for display

  // Can this change be undone?
  canUndo       Boolean  @default(true)
  undone        Boolean  @default(false)

  // Timestamps
  createdAt     DateTime @default(now())
}

// =============================================
// SPIN QUESTION TRAINER MODELS
// =============================================

// Training Session - tracks individual training sessions
model TrainingSession {
  id              String   @id @default(cuid())

  // Link to trainee (existing SalesRep)
  traineeId       String
  trainee         SalesRep @relation(fields: [traineeId], references: [id], onDelete: Cascade)

  // Session configuration
  mode            String   // "learn", "practice", "live_sim"
  level           Int      // 1-5
  timerDuration   Int      // seconds (900 = 15 min default, 0 for no timer)
  vertical        String   // "ecommerce", "leadgen", "local_services"

  // Session metrics
  startedAt       DateTime @default(now())
  completedAt     DateTime?
  questionsAnswered Int    @default(0)
  correctAnswers   Int     @default(0)

  // Grading
  avgTypeAccuracy  Float?  // 0-100
  avgQualityScore  Float?  // 0-100
  avgNaturalness   Float?  // 0-100
  overallGrade     String? // "S", "A", "B", "C", "F"
  xpEarned         Int     @default(0)

  // Session state for resume capability
  scenarioState    String? @db.Text // JSON of current scenario context

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  responses       TrainingResponse[]
}

// Individual question/response within a session
model TrainingResponse {
  id              String   @id @default(cuid())

  // Link to session
  sessionId       String
  session         TrainingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  // Question context
  questionNumber  Int
  promptType      String   // "identify", "craft_single", "craft_chain", "scenario", "curveball"
  promptContext   String   @db.Text // The scenario/context presented
  expectedType    String?  // "S", "P", "I", "N" (for identification questions)

  // Trainee response
  traineeResponse String   @db.Text
  responseTimeMs  Int      // How long they took to respond

  // AI grading
  identifiedType  String?  // What type the AI identified their question as
  typeCorrect     Boolean?
  qualityScore    Float?   // 0-100
  naturalnessScore Float?  // 0-100
  aiFeedback      String?  @db.Text

  // Calculated grade for this response
  grade           String?  // "S", "A", "B", "C", "F"
  xpAwarded       Int      @default(0)

  // Prospect response (for interactive modes)
  prospectResponse String? @db.Text
  informationRevealed String? @db.Text // What the prospect shared based on quality

  // Timestamps
  createdAt       DateTime @default(now())
}

// Spaced repetition tracking per question type per trainee
model SpacedRepetition {
  id              String   @id @default(cuid())

  // Link to trainee
  traineeId       String
  trainee         SalesRep @relation(fields: [traineeId], references: [id], onDelete: Cascade)

  // Question type being tracked
  questionType    String   // "S", "P", "I", "N"
  level           Int      // 1-5

  // SM-2 Algorithm fields
  easeFactor      Float    @default(2.5) // Multiplier for interval
  intervalDays    Float    @default(1)   // Days until next review
  repetitions     Int      @default(0)   // Successful repetitions in a row
  lastReviewedAt  DateTime?
  nextReviewAt    DateTime @default(now())

  // Performance tracking
  totalAttempts   Int      @default(0)
  correctAttempts Int      @default(0)

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([traineeId, questionType, level])
}

// Lifetime stats per trainee
model TrainerStats {
  id                    String   @id @default(cuid())

  // Link to trainee
  traineeId             String   @unique
  trainee               SalesRep @relation(fields: [traineeId], references: [id], onDelete: Cascade)

  // XP and Level
  totalXp               Int      @default(0)
  currentLevel          Int      @default(1)

  // Streak tracking
  currentStreak         Int      @default(0)
  longestStreak         Int      @default(0)
  lastTrainingDate      DateTime?

  // Session stats
  totalSessions         Int      @default(0)
  totalQuestionsAnswered Int     @default(0)
  totalTimeSpentSeconds Int      @default(0)

  // Accuracy by type
  situationAccuracy     Float?
  problemAccuracy       Float?
  implicationAccuracy   Float?
  needPayoffAccuracy    Float?

  // Level unlocks (stores highest level achieved per mode)
  highestLevelLearn     Int      @default(1)
  highestLevelPractice  Int      @default(1)
  highestLevelLiveSim   Int      @default(1)

  // Grade distribution (JSON: {"S": 10, "A": 25, ...})
  gradeDistribution     String?  @db.Text

  // Weekly/Monthly aggregates
  questionsThisWeek     Int      @default(0)
  questionsThisMonth    Int      @default(0)
  weekStartDate         DateTime?
  monthStartDate        DateTime?

  // Settings
  pomodoroMinutes       Int      @default(15)  // Default session length

  // Timestamps
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

// Question bank for pre-defined scenarios
model TrainerQuestion {
  id              String   @id @default(cuid())

  // Question metadata
  level           Int      // 1-5
  vertical        String   // "ecommerce", "leadgen", "local_services"
  questionType    String   // "S", "P", "I", "N"
  promptType      String   // "identify", "craft_single", "craft_chain", "scenario", "curveball"

  // Content
  scenarioDescription String @db.Text
  prospectPersona     String @db.Text // JSON with prospect details
  correctAnswer       String? @db.Text // For identification questions
  sampleGoodResponse  String? @db.Text
  followUpContext     String? @db.Text // For chain questions
  curveballType       String? // "deflection", "rambling", "objection"

  // Metadata
  difficulty          Int     @default(3) // 1-5
  isActive            Boolean @default(true)

  // Timestamps
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// =============================================
// SALES CHECKLIST MODELS
// =============================================

// Checklist items (personalized per sales rep)
model ChecklistItem {
  id              String   @id @default(cuid())

  // Link to sales rep (each rep has their own items)
  salesRepId      String
  salesRep        SalesRep @relation(fields: [salesRepId], references: [id], onDelete: Cascade)

  // Item content
  title           String   // e.g., "Tongue Twister Practice"
  description     String?  // Optional description/notes
  category        String?  // e.g., "Warm-up", "Learning", "Practice", "Community"

  // Display order
  sortOrder       Int      @default(0)

  // Status
  isActive        Boolean  @default(true)

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  completions     ChecklistCompletion[]
}

// Weekly completions for checklist items
model ChecklistCompletion {
  id              String   @id @default(cuid())

  // Link to sales rep
  salesRepId      String
  salesRep        SalesRep @relation(fields: [salesRepId], references: [id], onDelete: Cascade)

  // Link to checklist item
  itemId          String
  item            ChecklistItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  // Week information
  weekStartDate   DateTime  // Monday of the week

  // Completion status
  completed       Boolean  @default(false)
  completedAt     DateTime?

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Unique constraint - one completion per item per week
  @@unique([salesRepId, itemId, weekStartDate])
}

// Weekly history/summary for tracking over time
model WeeklyChecklistHistory {
  id              String   @id @default(cuid())

  // Link to sales rep
  salesRepId      String
  salesRep        SalesRep @relation(fields: [salesRepId], references: [id], onDelete: Cascade)

  // Week information
  weekStartDate   DateTime
  weekLabel       String   // e.g., "Jan 13, 2026"

  // Stats for this week
  totalItems      Int      @default(0)
  completedItems  Int      @default(0)
  completionRate  Float    @default(0)  // 0-100 percentage

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Unique constraint - one history per rep per week
  @@unique([salesRepId, weekStartDate])
}

// =============================================
// FINANCE TRACKER MODELS (Password Protected)
// =============================================

// Finance User - password-protected accounts
model FinanceUser {
  id              String   @id @default(cuid())

  // User identification
  name            String   @unique  // e.g., "Alex", "Dominic"
  passwordHash    String   // Hashed password for security

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  financeEntries  FinanceEntry[]
}

// Monthly Finance Entry - tracks income and expenses
model FinanceEntry {
  id              String   @id @default(cuid())

  // Link to finance user
  userId          String
  user            FinanceUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Month information
  monthStartDate  DateTime  // First day of the month
  monthLabel      String    // e.g., "December 2025"

  // Income/Sales items (can have multiple per month - stored as JSON array)
  salesItems      String?   @db.Text  // JSON: [{name: "linsen guy", amount: 500}, ...]
  salesTotal      Float     @default(0)

  // Expenses
  reviewsExpense      Float   @default(0)
  paidAuditsExpense   Float   @default(0)
  lpExpense           Float   @default(0)  // Landing Page expenses
  bookingsExpense     Float   @default(0)
  tenPercentExpense   Float   @default(0)  // 10% expense (commission, etc.)
  otherExpenses       String? @db.Text     // JSON for additional expenses
  expensesTotal       Float   @default(0)

  // Calculated totals
  netTotal            Float   @default(0)  // salesTotal - expensesTotal

  // Notes
  notes               String? @db.Text

  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Unique constraint - one entry per user per month
  @@unique([userId, monthStartDate])
}
